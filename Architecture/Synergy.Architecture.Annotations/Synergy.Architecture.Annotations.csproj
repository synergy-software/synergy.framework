<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <IsPackable>true</IsPackable>
        <PackageVersion>$(Version)</PackageVersion>
        <Title>Synergy Annotations</Title>
        <Authors>Synergy Marcin Celej</Authors>
        <PackageLicenseFile>license.txt</PackageLicenseFile>
        <Description>Architecture testing annotations</Description>
        <Copyright>Copyright Â© Synergy Marcin Celej 2023</Copyright>
        <PackageProjectUrl>https://github.com/synergy-software/synergy.framework</PackageProjectUrl>
        <PackageIcon>synergy.png</PackageIcon>
        <PackageTags>Diagrams as Code</PackageTags>
    </PropertyGroup>
    
    <ItemGroup>
      <None Update="license.txt">
        <Pack>true</Pack>
        <PackagePath></PackagePath>
      </None>
      <None Update="synergy.png">
        <Pack>true</Pack>
        <PackagePath></PackagePath>
      </None>
    </ItemGroup>
    
    <ItemGroup>
      <Folder Include="Diagrams" />
    </ItemGroup>

</Project>
